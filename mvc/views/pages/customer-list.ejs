<%-include("../includes/header") %>
<div class="container my-5" style="min-height: 700px;">
  <div class="row">
    <div class="col-md-12">
      
      <h2>Customer List</h2>
        <table class="table table-dark">
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Delete</th>
            <th>Update</th>
          </tr>
     <% result.forEach((value,index)=>{%>
      <tr>
        <td><%-index+1%></td>
        <td><%-value.name%></td>
        <td><%-value.contact%></td>
        <td><a href="/customer/delete/<%-  value._id %>" class="btn btn-danger btn-sm">Delete</a></td>
        <td><a href="/customer/update/<%-  value._id %>" class="btn btn-primary btn-sm">Update</a></td>
      </tr>
    <% })%>
        </table>
      </div>
   </div>
</div>
<%-include("../includes/footer") %>